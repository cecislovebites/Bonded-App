<div class="group-container-show-index">
  <div class="heading">
    <h2>There are <%= @groups.count %> groups near you</h2>
  </div>

  <%= form_tag(groups_path, :method => "get", id: "search-form") do %>
    <%= select_tag :location, options_for_select(["London", "Bristol", "Manchester", "Liverpool", "Cambridge", "Canterbury", "Birmingham", "Brighton", "Bath", "Reading" ],
        params[:location]), prompt: 'Any location', class: 'dropdown btn' %>
    <%= select_tag :category, options_for_select(["Sport & Fitness", "Films", "Technology", "Pets & Animals", "Music", "Art & Culture", ],
        params[:category]), prompt: 'Any category', class: 'dropdown btn' %>
    <%= submit_tag "Find", class: "submit-btn-group btn" %>
  <% end %>

  <div class="group-cards-container">
    <% @groups.each do |group| %>
    <div class="group-card">
      <img class="group-img-index" src=<%= group.image_url %> alt="">
      <div class="group-card-info">
        <h3><strong><%= link_to group.name, group_path(group), class: "group-name" %></strong></h3>
        <h4 class="group-category-index"><%= group.category %></h4>
        <h4 class="fw-bold group-location-index"><%= group.location %></h4>
        <p class="group-about-index"><%= group.about%></p>
      </div>
    </div>
    <hr class="group-index-divider">
    <% end %>
  </div>
</div>
