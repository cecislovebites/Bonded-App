<div class="user-show-container">
  <div class="user-show-content">
    <div class="group-profile">
      <div class="card user-profile-card-background">

        <img src="<%= @group.image_url %>">

        <h3 class="group-show-name-card"><%= @group.name %></h3>
        <div class="user-info">
          <p><%= @group.category %></p>
          <p><i class="map-dot-show fa-solid fa-location-dot"></i><%= @group.location %></p>
        </div>

        <div>
          <p class="group-show-about"><%= @group.about %></p>
        </div>

        <%= simple_form_for [@group, @user_group] do |f| %>
        <%= submit_tag "Join this group", class: "btn join-btn" %>
        <% end %>



        <div class="user-socials">
          <i id= "group-show-socials" class="fa-brands fa-facebook"></i>
          <i id= "group-show-socials" class="fa-brands fa-instagram"></i>
          <i id= "group-show-socials" class="fa-brands fa-twitter"></i>
        </div>

      </div>
    </div>


    <div class="map-container-show"style="width: 100%; height: 300px;">
      <div class= "group-show-map" style="width: 500px; height: 255px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <div class="members-container">
        <h3 class="members">Members</h3>
          <% @group.user_groups.map do |user_group| %>
          <%= link_to (image_tag user_group.user.avatar_url, class: "group-show-avatar"), user_path(user_group.user) %>
          <% end %>
      </div>
    </div>
  </div>

</div>

  <div class="text-center discussion-container">
    <div class="discussion-card">
      <% @group.posts.each do |post| %>
      <div class="discussion-card-title">
        <div class="card-title-item ">
          <%= image_tag post.user.avatar_url, class:"avatar" %>
        </div>
        <div class="card-title-item">
          <p class="text-xl-left fw-bold"> <%= post.user.nickname %> </p>
        </div>
        <div class="card-title-item">
          <p class="text-xl-left"> <%= post.created_at %></p>
        </div>
      </div>
      <div class="discussion-card-content">
        <p class="text-md-left"> <%= post.content %></p>
      </div>
      <% end %>
      <h4 id="group-name">Post Your Comments</h4>
      <%= simple_form_for([@group, @post]) do |f| %>
      <%= f.input :content, label: false, wrapper_html: { class: "" }%>
      <%= f.button :submit, class: "join-btn"%>
      <% end %>

    </div>
  </div>
